<!DOCTYPE html>
<html>
 <head>
 <% include ./partials/head %>
 </head>
 <body>
   <header>
     <% include ./partials/header %>
   </header>
   <h1 class='center'>My Games</h1>
   <hr />
   <div class='row'>
     <div class='col s12 m4'>
       <h3>Add Game</h3>
       <form action='/games' method='post'>
         <input type='text' name='title' placeholder='Title' />
         <button class='btn btn-waves' type='submit'>Add</button>
       </form>
     </div>
     <table class='table col m8 s12'>
       <thead>
         <th>Title</th>
         <th>Edit</th>
         <th>x</th>
       </thead>
       <tbody>
          <% games.forEach( function(game) { %>
          <% var url = "/games/" + game.id + "?_method=DELETE" %>
          <% var editUrl = "games/" + game.id + "/edit" %>
           <tr>
             <td><%= game.title %></td>
             <td>
               <a class="btn" href=<%= editUrl %>>Edit</a>
             </td>
             <td>
               <from method="POST" action=<%= url %>>
                 <button class="btn red">Delete</button>
               </from>
             </td>
         <% }); %>
       </tbody>
     </table>
   </body>
</html>